<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbStep3AddPassenger"
        android:layout_gravity="center"
        android:padding="10dp"
        android:focusable="false"
        android:layout_weight="1"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStep3ContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三(成人)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/tvStep3ContactIdCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="身份证:456789123456789" />

        <TextView
            android:id="@+id/tvStep3ContactTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="电话：12345678910" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imStep3ContactDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@mipmap/forward_25"
        android:layout_marginLeft="15dp"
        />
</LinearLayout>
